<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="drawerArrowStyle">@style/DrawerArrowStyleNormal</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="cpbStyle">@style/cpbStyle</item>

        <item name="colorControlActivated">@color/colorSwitchActivated</item>
    </style>

    <style name="buttonStyle" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="editTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textColorHint">@color/hintTextColor</item>
        <item name="android:textColor">@color/textColorMain</item>
    </style>

    <style name="cpbStyle" parent="android:Widget.Holo.ProgressBar">
        <item name="cpb_color">#ffffffff</item>
        <item name="cpb_stroke_width">3dp</item>
        <item name="cpb_min_sweep_angle">20</item>
        <item name="cpb_max_sweep_angle">300</item>
        <item name="cpb_sweep_speed">1</item>
        <item name="cpb_rotation_speed">1</item>
    </style>

    <style name="cpbStyleMainColor" parent="cpbStyle">
        <item name="cpb_color">@color/colorPrimary</item>
    </style>

    <style name="toolbarStyle" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorControlNormal">@color/colorItemBackground</item>
    </style>

    <style name="DrawerArrowStyleNormal" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">false</item>
        <item name="color">#ffffff</item>
    </style>

</resources>
